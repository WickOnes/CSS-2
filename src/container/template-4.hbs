<header class="header">
	{{> logo}}
	<nav class="header_nav">
		<div class="header_nav_right">{{>nav list=header }}</div>
	</nav>
</header>

{{#with main}}
<div class="hero">
	<img src="{{image}}" alt="img" class="hero_image">
	<div class="hero_content">
		<h1 class="hero_title">
			{{heading}}
		</h1>
		<p class="hero_text">{{descriotion}}</p>
		<a href="{{href}}" class="button hero_button">{{button}}</a>
	</div>

</div>
{{/with}}


<main class="blog">
	{{#each featured }}
	<div class="card">
		<div class="card_image" style="background-image: url({{photo}});"></div>
		<h2 class="card_title">
			{{heading}}
		</h2>
		<p class="card_text">{{info}}</p>
		<a href="{{linkUrl}}" class="card_button ">{{linkText}}</a>
	</div>
	{{/each}}
</main>


<div class="form">
	{{#each actions}}
	<div class="form_content">
		<h3 class="form_title">
			{{heading}}
		</h3>
		<a href="{{url}}" class="form_button button">{{text}}</a>
	</div>

	{{/each}}

</div>


<footer class="footer">
	<div class="">
		{{> logo}}
		<span class="footer_copyright">Copyright 2024</span>
	</div>
	{{#each footer}}
	<div class="">
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>